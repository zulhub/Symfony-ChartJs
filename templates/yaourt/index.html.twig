{% extends 'base.html.twig' %}

{% block title %}Yaourt index{% endblock %}

{% block body %}
    <h1>Yaourt index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbrYaourt</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for yaourt in yaourts %}
            <tr>
                <td>{{ yaourt.id }}</td>
                <td>{{ yaourt.nbrYaourt }}</td>
                <td>{{ yaourt.createdAt ? yaourt.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_yaourt_show', {'id': yaourt.id}) }}">show</a>
